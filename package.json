{
  "name": "mature",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:mature": "yarn workspace @mature/mature build",
    "deploy": "yarn run -W clean && yarn run -W build && yarn workspace @mature/infra deploy",
    "test": "run-s test:*",
    "test:mature": "yarn workspace @mature/mature test",
    "test:infra": "yarn workspace @mature/infra test",
    "clean": "run-s clean:*",
    "clean:mature": "yarn workspace @mature/mature clean",
    "clean:infra": "yarn workspace @mature/infra clean"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
